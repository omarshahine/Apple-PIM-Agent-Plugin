{
  "name": "apple-pim-mcp",
  "version": "2.5.0",
  "description": "MCP server for Apple PIM (Calendar, Reminders, Contacts, Mail)",
  "type": "module",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "build": "esbuild server.js --bundle --platform=node --target=node18 --format=esm --outfile=dist/server.js --external:child_process --external:fs --external:path --external:url",
    "test": "vitest run",
    "prepublish": "npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "js-yaml": "^4.1.0",
    "mailparser": "^3.9.3",
    "turndown": "^7.2.2"
  },
  "devDependencies": {
    "esbuild": "^0.20.0",
    "vitest": "^3.2.4"
  }
}
